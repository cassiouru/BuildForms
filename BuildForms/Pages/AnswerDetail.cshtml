@page
@model BuildForms.Pages.AnswerDetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AnswerDetail";
}

<div style="text-align: center">
    <br />
    <br />
    <table border="1" style="margin-left: auto; margin-right: auto; text-align: center">
        <thead style="background-color: silver">
            <tr>
                <th>Pergunta</th>
                <th>Resposta</th>
                <th>Tipo</th>
                <th>Obrigatório</th>
                <th>Opções dísponíveis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FormItemAnswer)
            {
                <tr>
                    <td>@item.Question</td>
                    <td>@item.Answer</td>
                    <td>@item.FormItem.Type</td>
                    <td>@item.FormItem.Required</td>
                    <td>@string.Join(", ", item.FormItem.Options?.Select(x => x.Value))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
